<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:padding="4dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="@color/cardboard_color_theme"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp">

            <ImageView
                android:id="@+id/thumbnail_airing_today"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"/>

            <RelativeLayout
                android:id="@+id/air_today_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/thumbnail_airing_today"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/start_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_star_rate_white_18dp"
                    android:tint="@color/md_yellow_600"/>

                <TextView
                    android:id="@+id/rating_value_air_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/first_air_date_value_airing_today"
                    android:layout_toEndOf="@+id/start_icon"
                    android:paddingEnd="1dp"
                    android:paddingStart="1dp"
                    android:text="@string/abbreviation_do_not_have"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year_title"
                    android:layout_marginEnd="2dp"
                    android:layout_alignBottom="@+id/rating_value_air_today"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/first_air_date_value_airing_today"/>

                <TextView
                    android:id="@+id/first_air_date_value_airing_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="2dp"
                    android:text="@string/abbreviation_do_not_have"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/air_today_rating_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="5dp"
                android:maxHeight="50dp">

                <TextView
                    android:id="@+id/title_airing_today"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:maxLines="2"
                    android:text="@string/loading"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>