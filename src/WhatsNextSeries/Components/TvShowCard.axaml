<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:WhatsNextSeries.Components">
    <Design.PreviewWith>
        <controls:TvShowCard />
    </Design.PreviewWith>

    <Style Selector="controls|TvShowCard">
        <!-- Set Defaults -->
        <Setter Property="TextBlock.FontSize" Value="20" />
        <Setter Property="TextBlock.FontWeight" Value="Bold" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Background="{TemplateBinding Background}">
                    <TextBlock Text="{TemplateBinding TvShowName}" Margin="10" />
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
    
        
</Styles>
