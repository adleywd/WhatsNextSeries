<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WhatsNextSeries.ViewModels"
             xmlns:avaloniaProgressRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             xmlns:components="clr-namespace:WhatsNextSeries.Components"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="700"
             x:Class="WhatsNextSeries.Views.AiringTodayTabView"
             x:DataType="vm:TabbedViewModel">

    <Design.DataContext>
        <vm:TabbedViewModel />
    </Design.DataContext>

    <Panel>
        <avaloniaProgressRing:ProgressRing Width="50"
                                           Height="50"
                                           IsActive="{Binding IsAiringTodayInitialLoading}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="MediumPurple" />
        <Panel HorizontalAlignment="Center">
            <ScrollViewer Name="AiringTodayScrollableViewer"
                          IsScrollChainingEnabled="True"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          IsScrollInertiaEnabled="True"
                          ScrollChanged="ScrollViewer_OnScrollChanged">
                <ItemsRepeater ItemsSource="{Binding AiringToday}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout ItemsJustification="Start"
                                           ItemsStretch="Fill"
                                           MaximumRowsOrColumns="10"
                                           MinColumnSpacing="5"
                                           MinRowSpacing="10"
                                           MinItemHeight="250"
                                           MinItemWidth="150" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.Transitions>
                    </ItemsRepeater.Transitions>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate DataType="vm:TvShowViewModel">
                            <Border>
                                <Border.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuItem Header="{Binding Name, StringFormat='Open {0}'}"
                                                  Command="{Binding OpenShowDetailsCommand}">
                                            <MenuItem.Icon>
                                                <avalonia:MaterialIcon Kind="OpenInNew"
                                                                       Foreground="MediumPurple" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="{Binding Name, StringFormat='Add {0} to favorites'}"
                                                  Command="{Binding AddFavoriteCommand}">
                                            <MenuItem.Icon>
                                                <avalonia:MaterialIcon Kind="StarAdd"
                                                                       Foreground="SeaGreen" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuFlyout>
                                </Border.ContextFlyout>
                                <components:TvShowCard Tapped="TvShowCard_OnTapped"
                                                       PointerMoved="TvShowCard_OnPointerMoved"
                                                       Margin="10,5"
                                                       TvShowName="{Binding Name}"
                                                       TvShowPosterImage="{Binding PosterImageLink}"
                                                       HidePosterPlaceHolder="{Binding !HasPosterImage}" />
                            </Border>

                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
            <Panel VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <Panel.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="!IsAiringTodayInitialLoading" />
                        <Binding Path="IsAiringTodayLoadingMoreItems" />
                    </MultiBinding>
                </Panel.IsVisible>
                <Panel Background="Black" Opacity="0.5" />
                <avaloniaProgressRing:ProgressRing Width="50"
                                                   Height="50"
                                                   IsActive="{Binding IsAiringTodayLoadingMoreItems}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="MediumPurple" />
            </Panel>
        </Panel>
    </Panel>
</UserControl>