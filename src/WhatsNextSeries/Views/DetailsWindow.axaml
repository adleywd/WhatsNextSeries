<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:WhatsNextSeries.Views"
        xmlns:vm="clr-namespace:WhatsNextSeries.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="500"
        x:Class="WhatsNextSeries.Views.DetailsWindow"
        Icon="/Assets/logo.ico"
        Width="300" Height="500"
        WindowStartupLocation="CenterOwner"
        x:DataType="vm:DetailsViewModel"
        Title="{Binding TvShow.Name}">
    
    <Design.DataContext>
        <vm:DetailsViewModel />
    </Design.DataContext>
    
    <views:DetailsView />
</Window>
